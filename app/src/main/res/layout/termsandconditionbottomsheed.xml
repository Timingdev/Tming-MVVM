<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:background="@drawable/dialogbg"
            android:padding="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent=".85"
            app:layout_constraintHeight_percent=".5"
            android:layout_marginBottom="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Title"
                app:layout_constraintWidth_percent=".8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#333333"
                android:text="@string/terms_and_condition"
                android:gravity="center"
                android:fontFamily="@font/assistant_semibold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/TText"
                android:text="@string/TConsition"
                app:layout_constraintTop_toBottomOf="@id/Title"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/sssistant_regular"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/OkButton"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@+id/TText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:shapeAppearanceOverlay="@style/shape_button"
                android:background="@color/carbon_green_300"
                app:layout_constraintHeight_percent=".5"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintWidth_percent=".5"
                android:layout_height="@dimen/_30sdp"/>

            <TextView
                app:layout_constraintTop_toTopOf="@+id/OkButton"
                app:layout_constraintStart_toStartOf="@+id/OkButton"
                app:layout_constraintEnd_toEndOf="@id/OkButton"
                app:layout_constraintBottom_toBottomOf="@id/OkButton"
                app:layout_constraintWidth_percent=".4"
                android:layout_width="0dp"
                android:gravity="center"
                android:fontFamily="@font/assistant_semibold"
                android:textColor="@color/white"
                android:singleLine="true"
                android:text="@string/ok"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>