<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent=".75"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/dialogbg"
            android:padding="@dimen/_10sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/Clear"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_clear"
                app:tint = "@color/carbon_black_38"
                app:layout_constraintWidth_percent=".06"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>


            <TextView
                android:id="@+id/MoveTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/carbon_black_87"
                android:text="Send To Addition Hours"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".9"
                android:gravity="center"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/Details"
                app:layout_constraintTop_toBottomOf="@id/MoveTitle"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Here you can check your detailed stats like Companies viewed your Resume, Online Application, Emailed Resume, Shortlisted Jobs etc. Besides Stats from the Manage Resume option, you can view your resume dashboard at a glance"
                app:layout_constraintWidth_percent=".9"
                android:gravity="center"
                android:fontFamily="@font/sssistant_regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/SendRequest"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/Details"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent=".6"
                app:layout_constraintDimensionRatio="1:.23"
                app:shapeAppearanceOverlay="@style/shape_button"
                android:background="@drawable/button_bg"
                android:layout_height="0dp"/>

            <TextView
                app:layout_constraintTop_toTopOf="@+id/SendRequest"
                app:layout_constraintStart_toStartOf="@+id/SendRequest"
                app:layout_constraintBottom_toBottomOf="@+id/SendRequest"
                app:layout_constraintEnd_toEndOf="@+id/SendRequest"
                android:text="Send"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>