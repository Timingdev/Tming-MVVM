<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Manager.ManagerBusinessProfile">


        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/EmployeeBackGround"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/assistant_semibold"
            android:text="חכמים בזמן  - Timing"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="@dimen/_20sdp"
            android:src="@drawable/applogo"
            app:layout_constraintBottom_toTopOf="@+id/LoginEmployee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Title" />

        <TextView
            android:id="@+id/LoginEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/assistant_semibold"
            android:text="Sign in for manager"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view">




            <EditText
                android:id="@+id/NameOFBusinessInput"
                android:padding="@dimen/_13sdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Name of business"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/sssistant_regular"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/edittext_bg"
                app:layout_constraintBottom_toTopOf="@+id/ImageInput"
                app:layout_constraintWidth_percent=".8"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="0dp"
                android:textSize="@dimen/_12ssp"
                android:singleLine="true"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/ImageInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/sssistant_regular"
                android:background="@drawable/edittext_bg"
                android:hint="Name"
                android:backgroundTint="@null"
                android:padding="@dimen/_13sdp"
                android:inputType="text"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintTop_toBottomOf="@+id/NameOFBusinessInput"
                android:singleLine="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.8" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/Continue"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/invisiable_buttonbg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent=".12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent=".8"
                app:shapeAppearanceOverlay="@style/shape_button" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/assistant_semibold"
                android:gravity="center"
                android:singleLine="true"
                android:text="Continue"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/Continue"
                app:layout_constraintEnd_toEndOf="@+id/Continue"
                app:layout_constraintStart_toStartOf="@+id/Continue"
                app:layout_constraintTop_toTopOf="@+id/Continue"
                app:layout_constraintWidth_percent=".7" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>