<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ShapeView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".9"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/_3sdp"
            android:background="#C22C2C"
            app:layout_constraintDimensionRatio="1:.17"
            app:shapeAppearanceOverlay="@style/shape_button"
            android:layout_height="0dp" />


        <TextView
            android:textColor="@color/white"
            app:layout_constraintWidth_percent=".8"
            android:gravity="center"
            android:text="Sunday"
            app:layout_constraintTop_toTopOf="@+id/ShapeView"
            app:layout_constraintBottom_toBottomOf="@+id/ShapeView"
            app:layout_constraintStart_toStartOf="@+id/ShapeView"
            app:layout_constraintEnd_toEndOf="@+id/ShapeView"
            android:fontFamily="@font/assistant_semibold"
            android:singleLine="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>